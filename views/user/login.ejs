  <body>
    <div class="edica-loader"></div>
    <header class="edica-header">
      <div class="container"><%- include('./sections/navbar.ejs') %></div>
    </header>

    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
      <div class="container">
        <div class="card login-card">
          <div class="row no-gutters">
            <div class="col-md-5">
              <img
                src="assets-login/login_background.png"
                alt="login"
                class="login-card-img"
              />
              <img
                src="assets-login/login_element.png"
                alt=""
                class="login-card-img login-card-img-element"
              />
            </div>
            <div class="col-md-7">
              <div class="card-body">
                <div class="brand-wrapper">
                  <img src="SW_LOUNGE_LOGO.svg" alt="logo" class="logo" />
                </div>
                <p class="login-card-description">소프트웨어 라운지입니다</p>
                <form action="#!" id="loginForm">
                  <div class="form-group">
                    <label for="email" class="sr-only">아이디</label>
                    <input
                      type="email"
                      name="email"
                      id="email"
                      class="form-control"
                      placeholder="아이디"
                    />
                  </div>
                  <div class="form-group mb-4">
                    <label for="password" class="sr-only">학번</label>
                    <input
                      type="password"
                      name="password"
                      id="password"
                      class="form-control"
                      placeholder="학번"
                    />
                  </div>
                  <input
                    name="login"
                    id="loginBtn"
                    class="btn btn-block login-btn mb-4"
                    type="button"
                    value="로그인"
                  />
                </form>
                <!-- check button -->
                <!-- <button type="button" id="checkConnection">Check Connection</button> -->
                <script>
                  // check button
                  // const checkBtnEl = document.querySelector('#checkConnection');
                  // checkBtnEl.addEventListener('click', () => {
                  //   fetch('/login/check', {
                  //     method: "POST",
                  //     headers: {
                  //       "Content-Type": "application/json",
                  //     },
                  //   }).then(res => res.json).then((data) => {
                  //     if(data.success) {
                  //       console.log('success!');
                  //     }
                  //   })
                  // })
                  // check button



                  const loginFormEl = document.querySelector("#loginForm");
                  const emailEl = loginFormEl.querySelector("#email");
                  const passwordEl = loginFormEl.querySelector("#password");
                  const loginBtnEl = loginFormEl.querySelector("#loginBtn");

                  loginBtnEl.addEventListener("click", function () {
                    // email과 password가 table에 있는지 체크
                    fetch("/login", {
                      method: "POST",
                      headers: {
                        "Content-Type": "application/json",
                      },
                      body: JSON.stringify({
                        loginNickname: emailEl.value,
                        loginPassword: passwordEl.value,
                      }),
                    })
                      .then((res) => res.json())
                      .then((data) => {
                        console.log(data);
                        if (data.result === "error") {
                          Swal.fire(
                            "로그인 실패!",
                            "회원 정보가 올바르지 않습니다.",
                            "error"
                          );
                        } else {
                          window.location.href = "/index";
                        }
                      });
                  });
                </script>
                <!-- 비번 잊어버렸을때 <- 나중에 활성화 예정 -->
                <!-- <a href="#!" class="forgot-password-link">Forgot password?</a> -->
                <p class="login-card-footer-text">
                  계정이 없나요?
                  <a href="http://comedu.jejunu.ac.kr" target="blank_" class="text-reset">회원가입</a>
                </p>
